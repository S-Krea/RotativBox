                                {{ _self.detailListItem('Prêt matériel de remplacement') }}
                                {{ _self.detailListItem('Réparation avec pièces d\'origine') }}
                                {{ _self.detailListItem('Interlocuteur unique Cime dentaire') }}
                                <p class="list-group-item fw-bold py-2 mb-0 mt-1">Option</p>
                                {{ _self.detailListItem('Traitement tout-en-un par DAC Universal S') }}
